<link rel="stylesheet" href="/font-awesome/css/all.min.css" />
<link rel="stylesheet" href="/css/content.css" />

<% if (contentUser) { %>
<h3>Content creator yang terhubung:</h3>
<br />
<i class="fab fa-<%= contentUser.type %>"></i> <%= contentUser.name %>
<a href="/content/edit" class="button">Edit</a>

<% if (contentUser?.time + 1000 * 60 * 60 * 24 * 7 < Date.now()) { %>
<form action="/content" method="post" style="display: inline">
  <input type="hidden" name="id" value="<%= contentUser.content_id %>" />
  <input type="hidden" name="type" value="<%= contentUser.type %>" />
  <input type="hidden" name="name" value="<%= contentUser.name %>" />
  <button class="button" style="font-size: 16px" type="submit">Refresh</button>
</form>
<% } %> <% } else { %>
<h3>Belum ada konten kreator yang terhubung</h3>
<br />
<a href="/content/edit" class="button">Tambah</a>
<% } %>
